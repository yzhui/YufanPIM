<?xml version="1.0" encoding="UTF-8"?>
<ehcache>
	<diskStore path="java.io.tmpdir" />

	<defaultCache maxElementsInMemory="10000" eternal="false"
		timeToIdleSeconds="1200" timeToLiveSeconds="1200"
		overflowToDisk="true" clearOnFlush="true"
		memoryStoreEvictionPolicy="LFU">
	</defaultCache>
	    <cache name="SimplePageFragmentCachingFilter"  
        maxElementsInMemory="10"  
        eternal="false"  
        timeToIdleSeconds="10000"  
        timeToLiveSeconds="10000"  
        overflowToDisk="true"/> 
	    <cache name="AreaManageCache"  
        maxElementsInMemory="10"  
        eternal="false"  
        timeToIdleSeconds="10000"  
        timeToLiveSeconds="10000"  
        overflowToDisk="true"/> 
	    <cache name="CacheManageCache"  
        maxElementsInMemory="10"  
        eternal="false"  
        timeToIdleSeconds="10000"  
        timeToLiveSeconds="10000"  
        overflowToDisk="true"/> 
	    <cache name="DatabaseManageCache"  
        maxElementsInMemory="10"  
        eternal="false"  
        timeToIdleSeconds="10000"  
        timeToLiveSeconds="10000"  
        overflowToDisk="true"/> 
	    <cache name="InstallViewCache"  
        maxElementsInMemory="10"  
        eternal="false"  
        timeToIdleSeconds="10000"  
        timeToLiveSeconds="10000"  
        overflowToDisk="true"/> 
	<!-- 单独对某个entity的缓存策略设置
		<cache name="com.shopping.domain.User"
		maxElementsInMemory="100" eternal="false" timeToIdleSeconds="1200"
		timeToLiveSeconds="1200" overflowToDisk="true" clearOnFlush="true">
		</cache>
	-->
</ehcache>